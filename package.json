{
  "name": "@promaster/gql-cache-patch",
  "version": "0.1.0",
  "description": "Declarative patching for gql-cache",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "author": "Divid AB <info@divid.se>",
  "license": "MIT",
  "dependencies": {
    "gql-cache": "^0.3.0"
  },
  "devDependencies": {
    "@types/tape": "^4.2.32",
    "coveralls": "^3.0.2",
    "husky": "^0.14.3",
    "lint-staged": "^7.2.2",
    "nyc": "^12.0.2",
    "prettier": "^1.14.2",
    "rimraf": "^2.6.2",
    "tap-spec": "^5.0.0",
    "tape": "^4.9.1",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "typescript": "^3.0.1"
  },
  "scripts": {
    "lint": "tslint --config ./tslint.json -- './{src,test}/**/*.ts{,x}'",
    "test": "tape --require ts-node/register \"test/**/*.ts\" | tap-spec",
    "build": "rimraf lib && tsc -p src",
    "verify": "yarn lint && yarn build && yarn coverage",
    "publish-npm": "yarn verify && yarn publish && git push --tags",
    "precommit": "lint-staged",
    "coverage": "rimraf coverage .nyc_output && nyc yarn test",
    "report-coverage": "cat ./coverage/lcov.info | coveralls"
  },
  "lint-staged": {
    "*.{ts,tsx}": "tslint",
    "*.{ts,tsx,json,css}": [
      "prettier --write",
      "git add"
    ]
  }
}
